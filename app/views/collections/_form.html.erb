<%= form_for(@collection) do |f| %>

  <div class='row-fluid'>

    <div class='span6'>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'span12' %>
    </div>

    <div class='span6'></div>

  </div>

  <div class='row-fluid'>

    <div class='span6'>
      <%= f.label :project %>
      <%= f.text_field :project, class: 'span12' %>
    </div>

    <div class='span6'></div>

  </div>

  <div class='row-fluid'>

    <div class='span3'>

      <%= f.label 'Object Type' %>
      <%= f.select( :object_type_id, @collection_objects.collect { |c| [ c.name, c.id ] }, class: 'span12' ) %>

    </div><div class='span1'>

      <%= f.label :rows %>
      <%= f.number_field :rows, class: 'span12' %>

    </div><div class='span1'>

      <%= f.label :columns %>
      <%= f.number_field :columns, class: 'span12' %>

    </div><div class='span7'></div>

  </div>

  <br />

  <div class="actions">
    <%= f.submit class: "btn" %>
  </div>

<% end %>
