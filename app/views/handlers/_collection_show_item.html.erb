
<div class='row-fluid'>

  <div class='span5'>

    <% if @item.deleted? %>
      <h1>Deleted on <%= @item.updated_at %></h1>
    <% end %>

    <h2><%= link_to @item.object_type.name, @item.object_type %></h2>

    <%= render partial: "handlers/item_data_form" %>

  </div>

  <div class='span7'>

    <h2>Contents</h2>

    <% m = @handler.matrix @item %>

    <table class='sample_box_table'>
      <% m.each do |row| %>
        <tr>
          <% row.each do |sample_id| %>
            <% if sample_id >= 0 %>            
              <td class='full'>
                <% s = Sample.find_by_id(sample_id) %>
                <% if s %>
                  <% tooltip = s.name %>
                  <%= link_to sample_id, s, title: tooltip, rel: "tooltip" %>
                <% else %>
                  <%= sample_id %>?
                <% end %>
              </td>
            <% else %>
              <td class='full'></td>
             <% end %>
          <% end %>
        </tr>
      <% end %>
    </table>

  </div>

</div>

<script>
  $(".tooltip").tooltip();
  $("a[rel=tooltip]").tooltip();

</script>
