<div ng-if="current_ot.cost_model && mode == 'cost'" ng-controller="codeCtrl as code">

  <div ng-model="current_ot.cost_model.content"
       ui-ace="{
                 useWrapMode : true,
                 mode: 'ruby',
                 onLoad: aceLoaded,
                 onChange: aceChanged,
                 theme:'tomorrow'
               }"
       ng-change="change(current_ot.cost_model)">
  </div>

  <div class='code-controls'>
    <a href='#' class='btn' ng-click="save(current_ot,'cost_model')" ng-disabled="!current_ot.cost_model.changed">Save</a>
  </div>

</div>