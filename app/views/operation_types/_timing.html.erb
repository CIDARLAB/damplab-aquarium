<div ng-show="mode == 'timing'" class='timing' layout-padding>

  <form>

    <div class="row-fluid">
     
      <div class='span3'>

        <label>Begin</label>
        <input class="input-mini" type="number" ng-model="current_ot.timing.start_form.hour" ng-disabled="!current_ot.timing.active"> : 
        <input class="input-mini" type="number" ng-model="current_ot.timing.start_form.minute" ng-disabled="!current_ot.timing.active"><br>
        <input type="radio" name="start-ampm" value="am" ng-model="current_ot.timing.start_form.ampm" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>AM</div>
        <input type="radio" name="start-ampm" value="pm" ng-model="current_ot.timing.start_form.ampm" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>PM</div>

      </div>

      <div class='span3'>

        <label>End</label>
        <input class="input-mini" type="number" ng-model="current_ot.timing.stop_form.hour" ng-disabled="!current_ot.timing.active"> : 
        <input class="input-mini" type="number" ng-model="current_ot.timing.stop_form.minute" ng-disabled="!current_ot.timing.active"><br>
        <input type="radio" name="stop-ampm" value="am" ng-model="current_ot.timing.stop_form.ampm" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>AM</div>
        <input type="radio" name="stop-ampm" value="pm" ng-model="current_ot.timing.stop_form.ampm" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>PM</div>        

      </div>       

      <div class="span3">

        <input type="checkbox" ng-model="current_ot.timing.Su" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Sunday</div><br>
        <input type="checkbox" ng-model="current_ot.timing.Mo" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Monday</div><br>
        <input type="checkbox" ng-model="current_ot.timing.Tu" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Tuesday</div><br>
        <input type="checkbox" ng-model="current_ot.timing.We" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Wednesday</div><br>
        <input type="checkbox" ng-model="current_ot.timing.Th" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Thursday</div><br>
        <input type="checkbox" ng-model="current_ot.timing.Fr" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Friday</div><br>
        <input type="checkbox" ng-model="current_ot.timing.Sa" ng-disabled="!current_ot.timing.active"> <div class='radio-text'>Saturday</div>                        

      </div>

      <div class='span3'>
        <br>
        <input type="checkbox" name="active" ng-model="current_ot.timing.active"> <div class="radio-text">Using Timing Information</div>
        <br><br>
        <a href="#" class="btn btn-small btn-primary" ng-click="current_ot.timing.save()">Save Timing Info</a>
      </div>      

  </form>

</div>