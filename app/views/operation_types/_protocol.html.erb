<div ng-if="current_ot.protocol && mode == 'protocol'" ng-controller="codeCtrl as code">

  <div ng-model="current_ot.protocol.content"
       ui-ace="{
                 useWrapMode : true,
                 mode: 'ruby',
                 onLoad: aceLoaded,
                 onChange: aceChanged,
                 theme:'tomorrow'
               }"
        ng-change="change(current_ot.protocol)">
  </div>

  <div class='code-controls'>
    <a href='#' class='btn' ng-click="save(current_ot,'protocol')" ng-disabled="!current_ot.protocol.changed">Save</a>
  </div>

</div>