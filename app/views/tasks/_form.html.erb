<%= form_for(@task) do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :specification %>
    <%= f.text_area :specification, style: 'width: 100%' %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>

  <div class="field">
    <%= f.label :task_prototype_id %>
    <%= f.hidden_field :task_prototype_id, value: @task.task_prototype_id ? @task.task_prototype_id : params[:task_prototype_id] %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn' %>
  </div>

<% end %>
