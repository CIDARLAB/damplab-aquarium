<h1>Task Type: <%= @task_prototype.name %></h1>

<%= link_to "New #{@task_prototype.name}", new_task_path(task_prototype_id: @task_prototype.id), class: 'btn' %>

<%= link_to "Edit Prototype",
    edit_task_prototype_path(@task_prototype), class: 'btn' %>

<br /><br />

<table class='table'>
  <tr>
    <th>Name</th>
    <th>Specification</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.specification %></td>
    <td><%= task.status %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


