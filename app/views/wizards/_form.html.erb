<div id="errors"></div>

<div class='row-fluid'>
  <div class='span3'>
    <label>Name</label>
    <input id='name' type='text' style='width: 100%' value='<%= @wizard.name %>'></input>
  </div>
  <div class='span9'>
    <label>Description</label>
    <input id='description' type='text' style='width: 100%' value='<%= @wizard.description %>'></input>
  </div>
</div>  

<div class='row-fluid'>

  <% (1..3).each do |i| %>

    <% if @wizard.specification 

      spec = @wizard.spec
      name = @wizard.spec[:fields][i-1][:name]
      min = @wizard.spec[:fields][i-1][:min]
      max = @wizard.spec[:fields][i-1][:max]

    else

      name = ['','a','b','c'][i]
      min = 0
      max = 0

    end %>

    <div class='span4 well'>
      <label class='checkbox'>
        <input id="check<%= i %>" type='checkbox' checked>Use field <%= i %></label>
      </label>
      <label>Field Name</label><input id='name<%= i %>' type='text' value='<%= name %>'></input>
      <label>Minimum</label><input id='min<%= i %>' type='number' value=<%= min %>></input>
      <label>Maximum*</label><input id='max<%= i %>' type='number' value=<%= max %>></input>
    </div>

  <% end %>

</div>

<p>*Use -1 in the 'Maximum' field to specified that the field is unbounded.</p>

<button id='save' class='btn btn-primary'>Save</button>

<script>

function set(box,val,include_check) {
  box.prop("checked",val);
  var num = box.attr('id').substr(5);
  if ( !include_check ) { $('#check'+num).prop('disabled',!val); }
  $('#name'+num).prop('disabled',!val);  
  $('#min'+num).prop('disabled',!val);  
  $('#max'+num).prop('disabled',!val);
  console.log(box);
}

function check(box) {

  var id = box.attr('id');

  for ( var i=1; i<=3; i++ ) {
    if ( id == ("check" + i) ) {
      for ( var j=i; j<=3; j++ ) {
        if ( box.prop("checked") ) {
          set($('#check'+j),true,(i==j));   
        } else {
          set($('#check'+j),false,(i==j));      
        }
      }
    }
  }

}

for ( var i=1; i<=3; i++ ) {
  $('#check'+i).click(function() { check($(this)) });
}

$('#save').click(function() {

  var specification = { fields: [] };

  for ( var i=1; i<=3; i++ ) {
    if ( $('#check'+i).prop('checked') ) { 
      specification.fields.push({
        name: $('#name'+i).val(),
        min: parseInt($('#min'+i).val()),
        max: parseInt($('#max'+i).val())     
      });
    }
  }

  $.ajax({
    <% if @wizard.id %>
      type: 'PUT',
      url: '/wizards/<%= @wizard.id %>',
    <% else %>
      type: 'POST',
      url: '/wizards',
    <% end %>
    dataType: "json",
    data: { wizard: { 
      specification: specification, 
      name: $('#name').val(),
      description: $('#description').val()       
    } },
    success: function(data,status) {
      window.location = "/wizards";
    },
    error: function(x,s,e) {
      var r = JSON.parse(x.responseText);
      var ul = $('<ul>');
      for ( var key in r ) {
        ul.append('<li><b>' + key + '</b> :' + r[key] + '</li>')
      }
      $('#errors').empty().append($('<div>').addClass('alert').append('<p>Errors</p>').append(ul));
    }
  });

});

</script>





