<%= form_for(@sample_type) do |f| %>
  <% if @sample_type.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(@sample_type.errors.count, "error") %> prohibited this sample_type from being saved:</h2>
      <ul>
      <% @sample_type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

    </div>
  <% end %>

  <div class='row-fluid'>
   <div class='span3'>
     <label>Name</label>
     <%= f.text_field :name, placeholder: 'Name' %>
   </div>
   <div class='span9'>
     <label>Description</label>
     <%= f.text_field :description, placeholder: 'Short description' %>
   </div>
  </div>

  <hr />


    <% (1..4).each do |i| %>

      <% fn = "field#{i}name".to_sym
         ft = "field#{i}type".to_sym %>
  
      <div class='row-fluid'>

        <div class='span1'></div>

        <div class='span2'>
          <% if i == 1 %><label>Field Names</label><% end %>
          <%= f.text_field fn, placeholder: "Field #{i} Name" %>
        </div>

        <div class='span2'>
          <% if i == 1 %><label>Field Types</label><% end %>
          <%= f.select(ft, [['not used','not used'],['string','string'],['number','number'],['url','url']]) %>
        </div>

        <div class='span7'></div>

      </div>

    <% end %>

  <hr />

  <div class="actions">
    <%= f.submit "Save Sample Type", class: 'btn' %>
  </div>

<% end %>
