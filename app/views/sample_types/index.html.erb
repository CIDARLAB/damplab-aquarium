<% provide(:title, 'Sample Types') %>

<h1>Sample Types</h1>

<table class='table'>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Fields</th>
    <th>Samples</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sample_types.each do |sample_type| %>
  <tr>
    <td><b><%= sample_type.name %></b></td>
    <td><%= sample_type.description %></td>
    <td>
       <% if sample_type.field1name != '' %>
         <b><%= sample_type.field1name %></b>: <%= sample_type.field1type %></br>
       <% end %>
       <% if sample_type.field2name != '' %>
         <b><%= sample_type.field2name %></b>: <%= sample_type.field2type %></br>
       <% end %>
       <% if sample_type.field3name != '' %>
         <b><%= sample_type.field3name %></b>: <%= sample_type.field3type %></br>
       <% end %>
       <% if sample_type.field4name != '' %>
         <b><%= sample_type.field4name %></b>: <%= sample_type.field4type %></br>
       <% end %>
    </td>
    <td><%= link_to 'xxx samples', root_path %></td>
    <td><%= link_to 'Show', sample_type %></td>
    <td><%= link_to 'Edit', edit_sample_type_path(sample_type) %></td>
    <td><%= link_to 'Destroy', sample_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

