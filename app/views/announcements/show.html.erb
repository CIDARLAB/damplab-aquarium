<% provide(:title, 'Announcement') %>

<% content_for :controller do %>noCtrl<% end %>

<% content_for :main do %>

  <div layout-padding layout="row">

    <div flex="25"></div>

    <div flex="50">
      <p>
        <b>Title:</b>
        <%= @announcement.title %>
      </p>

      <p>
        <b>Message:</b>
        <%= @announcement.message %>
      </p>

      <p>
        <b>Active:</b>
        <%= @announcement.active %>
      </p>


      <%= link_to 'Edit', edit_announcement_path(@announcement) %> |
      <%= link_to 'Back', announcements_path %>
    </div>

  </div>

<% end %>





