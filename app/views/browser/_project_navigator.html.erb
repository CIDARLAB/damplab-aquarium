<div ng-class="browser_control_class('project')" 
     ng-click="select_view('project')"
     ng-if="views.project.loaded">

  <div class='project-heading project-expander'>
    Projects 
  </div>

  <div class='sample-tree-list'>
  <ul>

    <li ng-repeat="project in views.project.projects">

      <span class="project-expander" 
            ng-if="project.name != views.project.selection.project"
            ng-click="select_project(project)">
        <i class='icon-folder-close' style="color: #eee"></i>
        <span class='folder-name'>{{project.name}}</span>
      </span>

      <span class="project-expander"
            ng-if="project.name == views.project.selection.project"
            ng-click="unselect_project(project)">
        <i class='icon-folder-open' style="color: #eee"></i>
        <span class='folder-name'>{{project.name}}</span>
      </span>

      <ul ng-show='project.name == views.project.selection.project'>

        <li ng-repeat="st in sample_types" class="project-expander" ng-if="show_sample_type(project,st)">

          <span ng-if="st.id != views.project.selection.sample_type" 
                ng-click="select_st(st)">
              <i class='icon-folder-close' style="color: #eee"></i> 
            <span class='folder-name'>{{st.name}}</span>
          </span>      

          <span ng-if="st.id == views.project.selection.sample_type"
                ng-click="unselect_st(st)">
            <i class='icon-folder-open' style="color: #eee"></i> 
            <span class='folder-name'>{{st.name}}</span>
          </span>          

        </li>

      </ul>

    </li>

  </ul>

  </div>

</div>
