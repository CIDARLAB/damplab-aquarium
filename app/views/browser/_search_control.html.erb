
<div ng-class="browser_control_class('search')" 
     ng-click="select_view('search')"
     ng-if="projects && sample_names && sample_type_names">

  <div class="search-part">
    <label>Search String</label>
    <input type="text" ng-model="views.search.query" style="width: 100%" samplecomplete="'all'">
  </div>

  <div class="search-part">
    <label>Sample Type</label>
    <input type="text" ng-model="views.search.sample_type" style="width: 100%" sampletypecomplete> 
  </div>

  <div class="search-part">
    <label>Project</label>
    <input type="text" ng-model="views.search.project" style="width: 70%" projectcomplete>
    <label class="checkbox user-filter" style="display: inline-block;">
      <input type=checkbox 
             ng-model='views.search.project_filter' 
             ng-checked='views.search.project_filter' /> Filter?
    </label>    
  </div>

  <div class="search-part">
    <label>User</label>
    <input type="text" ng-model="views.search.user" style="width: 70%" usercomplete>
    <label class="checkbox user-filter" style="display: inline-block;">
      <input type=checkbox 
             ng-model='views.search.user_filter' 
             ng-checked='views.search.user_filter' /> Filter?
    </label>    
  </div>   

  <a class="btn" type="button" ng-click="search(0)">Search</a>  

</div>